<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mine_toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mt_toolbar_height"
        android:background="@color/colorPrimaryDark"
        android:minHeight="@dimen/mt_toolbar_height"
        app:navigationIcon="@drawable/exit"
        app:title=""
        app:titleTextColor="#FFFFFF" />

    <View
        style="@style/mine_divider_styles"/>
    <LinearLayout
        style="@style/mine_linear_styles">
        <ImageView
            style="@style/mine_icon_styles"
            android:src="@drawable/id"/>
        <TextView
            style="@style/mine_title_styles"
            android:text="学号"/>
        <TextView
            android:id="@+id/student_ID"
            style="@style/mine_info_styles" />
    </LinearLayout>
    <View
        style="@style/mine_small_divider_styles"/>
    <LinearLayout
        style="@style/mine_linear_styles">
        <ImageView
            style="@style/mine_icon_styles"
            android:src="@drawable/type"/>
        <TextView
            style="@style/mine_title_styles"
            android:text="类别"/>
        <TextView
            android:id="@+id/student_type"
            style="@style/mine_info_styles" />
    </LinearLayout>
    <View
        style="@style/mine_divider_styles"/>

    <LinearLayout
        style="@style/mine_linear_styles">
        <ImageView
            style="@style/mine_icon_styles"
            android:src="@drawable/college"/>
        <TextView
            style="@style/mine_title_styles"
            android:text="学院"/>
        <TextView
            android:id="@+id/college"
            style="@style/mine_info_styles" />
    </LinearLayout>
    <View
        style="@style/mine_small_divider_styles"/>
    <LinearLayout
        style="@style/mine_linear_styles">
        <ImageView
            style="@style/mine_icon_styles"
            android:src="@drawable/major"/>
        <TextView
            style="@style/mine_title_styles"
            android:text="专业"/>
        <TextView
            android:id="@+id/major"
            style="@style/mine_info_styles" />
    </LinearLayout>
    <View
        style="@style/mine_small_divider_styles"/>
    <LinearLayout
        style="@style/mine_linear_styles">
        <ImageView
            style="@style/mine_icon_styles"
            android:src="@drawable/grade"/>
        <TextView
            style="@style/mine_title_styles"
            android:text="年级"/>
        <TextView
            android:id="@+id/grade"
            style="@style/mine_info_styles" />
    </LinearLayout>
    <View
        style="@style/mine_divider_styles"/>

    <LinearLayout
        style="@style/mine_linear_styles">
        <ImageView
            style="@style/mine_icon_styles"
            android:src="@drawable/sex"/>
        <TextView
            style="@style/mine_title_styles"
            android:text="性别"/>
        <TextView
            android:id="@+id/sex"
            style="@style/mine_info_styles" />
    </LinearLayout>
    <View
        style="@style/mine_small_divider_styles"/>
    <LinearLayout
        style="@style/mine_linear_styles">
        <ImageView
            style="@style/mine_icon_styles"
            android:src="@drawable/birthday"/>
        <TextView
            style="@style/mine_title_styles"
            android:text="生日"/>
        <TextView
            android:id="@+id/birthday"
            style="@style/mine_info_styles" />
    </LinearLayout>
    <View
        style="@style/mine_divider_styles"/>

    <LinearLayout
        style="@style/mine_linear_styles">
        <ImageView
            style="@style/mine_icon_styles"
            android:src="@drawable/dormitory"/>
        <TextView
            style="@style/mine_title_styles"
            android:text="宿舍"/>
        <TextView
            android:id="@+id/dormitory"
            style="@style/mine_info_styles" />
    </LinearLayout>
    <View
        style="@style/mine_divider_styles"/>

    <LinearLayout
        style="@style/mine_linear_styles">
        <ImageView
            style="@style/mine_icon_styles"
            android:src="@drawable/join_day"/>
        <TextView
            style="@style/mine_title_styles"
            android:text="入学日期"/>
        <TextView
            android:id="@+id/join_day"
            style="@style/mine_info_styles" />
    </LinearLayout>
    <View
        style="@style/mine_divider_styles"/>

</LinearLayout>